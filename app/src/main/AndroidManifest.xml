<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="io.github.takusan23.tatimidroid">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- インターネット -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- 予約枠自動入場のServiceよう -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!-- 他のアプリに重ねて表示 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- インターネット接続の種類 -->

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">

        <meta-data
                android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
                android:value="io.github.takusan23.tatimidroid.GoogleCast.CastOptionsProvider" />

        <activity android:name=".DevNicoVideo.NicoVideoActivity"></activity>
        <activity
                android:name=".NimadoActivity"
                android:label="@string/nimado"
                android:theme="@style/NimadoTheme" />
        <activity
                android:name=".Activity.FloatingCommentViewer"
                android:allowEmbedded="true"
                android:documentLaunchMode="always"
                android:resizeableActivity="true" />
        <activity android:name=".Activity.CommentCollectionListActivity" />
        <activity android:name=".Activity.NGListActivity" />
        <activity android:name=".Activity.KonoApp" />
        <activity android:name=".Activity.CommentActivity" />
        <activity android:name=".Activity.LicenceActivity" />

        <service android:name=".Service.AutoAdmissionService" />

        <service android:name=".Service.NicoLivePlayService" />
        <service android:name=".Service.NicoVideoPlayService" />
        <service android:name=".Service.GetCacheService" />
        <service android:name=".Service.BackgroundPlaylistCachePlayService"></service>
        <service android:name=".Service.CommentGetService" />

        <receiver android:name="androidx.media.session.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 共有を受け取る labelが共有するときのアプリの名前になる（TwitterとかだとTwiiterじゃなくてツイートになってる部分。あれ） -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
            <!-- AppShortcut -->
            <meta-data
                    android:name="android.app.shortcuts"
                    android:resource="@xml/app_shortcut" />
        </activity>
    </application>

</manifest>