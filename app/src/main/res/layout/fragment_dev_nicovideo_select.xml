<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_video_motionlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutDescription="@xml/fragment_video_backdrop_motion"
        tools:showPaths="true">

    <LinearLayout
            android:id="@+id/fragment_video_backdrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/fragment_nicovideo_ranking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ranking" />

                <Button
                        android:id="@+id/fragment_nicovideo_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/post_video" />

                <Button
                        android:id="@+id/fragment_nicovideo_nicorepo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nicorepo" />

                <Button
                        android:id="@+id/fragment_nicovideo_mylist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mylist" />

                <Button
                        android:id="@+id/fragment_nicovideo_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/history" />

                <Button
                        android:id="@+id/fragment_nicovideo_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/serch" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/fragment_video_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="75dp"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_video_backdrop">

        <View
                android:layout_width="100sp"
                android:layout_height="10sp"
                android:background="@drawable/bottom_sheet_bar"
                android:padding="10dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_filter_list_black_24dp"
                android:padding="10dp"
                android:text="@string/video_dropdown" />

        <LinearLayout
                android:id="@+id/fragment_video_list_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>