<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/player_nicolive_control_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

    <!-- Visibilityで消えるとクリックできなくなるのでplayer_nicolive_control_parentは常に出す -->
    <LinearLayout
            android:id="@+id/player_nicolive_control_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/player_nicolive_control_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="end"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/player_nicolive_control_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:tint="#ffffff"
                    android:visibility="gone" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/player_nicolive_control_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="#ffffff" />

                <TextView
                        android:id="@+id/player_nicolive_control_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                    android:id="@+id/player_nicolive_control_video_network"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_wifi_black_24dp"
                    android:tint="#ffffff" />

            <ImageView
                    android:id="@+id/player_nicolive_control_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_send_black"
                    android:tint="#ffffff"
                    android:visibility="gone" />

            <ImageView
                    android:id="@+id/player_nicolive_control_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_popup_icon_black"
                    android:tint="#ffffff" />

            <ImageView
                    android:id="@+id/player_nicolive_control_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_background_icon_black"
                    android:tint="#ffffff" />

            <ImageView
                    android:id="@+id/player_nicolive_control_fullscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_fullscreen_black_24dp"
                    android:tint="#ffffff" />

            <ImageView
                    android:id="@+id/player_nicolive_control_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_volume_up_24px"
                    android:tint="#ffffff"
                    android:visibility="gone" />

            <ImageView
                    android:id="@+id/player_nicolive_control_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_clear_black"
                    android:tint="#ffffff"
                    android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" />


    </LinearLayout>

</LinearLayout>