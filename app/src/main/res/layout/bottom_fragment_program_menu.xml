<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/bottom_fragment_program_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/bottom_fragment_program_info_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="16sp" />

        <TextView
                android:id="@+id/bottom_fragment_program_info_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="" />

        <ScrollView
                android:id="@+id/bottom_fragment_program_info_buttons_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/bottom_fragment_program_info_community_copy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_content_paste_black_24dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/copy_communityid" />

                <TextView
                        android:id="@+id/bottom_fragment_program_info_id_copy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_content_paste_black_24dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/copy_program_id" />

                <TextView
                        android:id="@+id/bottom_fragment_program_info_popup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_popup_icon_black"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/popup_player" />

                <TextView
                        android:id="@+id/bottom_fragment_program_info_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_background_icon_black"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/background_play" />

                <TextView
                        android:id="@+id/bottom_fragment_program_info_floaing_comment_viewer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_library_books_24px"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/floating_comment_viewer"
                        android:visibility="gone" />

                <TextView
                        android:id="@+id/bottom_fragment_program_info_timeshift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_history_24px"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/timeshift_reservation_button" />

                <TextView
                        android:id="@+id/bottom_fragment_program_info_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_event_available_24px"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/add_calendar" />

                <TextView
                        android:id="@+id/bottom_fragment_program_info_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_share"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/share" />

                <TextView
                        android:id="@+id/bottom_fragment_program_info_auto_admission_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_expand_more_24px"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10dp"
                        android:text="@string/auto_admission"
                        android:visibility="gone" />

                <LinearLayout
                        android:id="@+id/bottom_fragment_program_info_auto_admission_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_outline_info_24px"
                            android:padding="10dp"
                            android:text="@string/auto_admission_description" />

                    <TextView
                            android:id="@+id/bottom_fragment_program_info_auto_admission_official_app"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_outline_open_in_browser_24px"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:text="@string/open_nicolive_app" />

                    <TextView
                            android:id="@+id/bottom_fragment_program_info_auto_admission_tatimidroid_app"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_auto_admission_start_icon"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:text="@string/open_tatimi_droid" />

                    <TextView
                            android:id="@+id/bottom_fragment_program_info_auto_admission_popup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_popup_icon_black"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:text="@string/open_popup" />

                    <TextView
                            android:id="@+id/bottom_fragment_program_info_auto_admission_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_background_icon_black"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:text="@string/open_background" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>