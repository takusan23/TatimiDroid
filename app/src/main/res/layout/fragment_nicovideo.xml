<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--  影をつけるためだけにCardView追加  -->
    <androidx.cardview.widget.CardView
            android:id="@+id/fragment_nicovideo_framelayout_elevation_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/fragment_nicovideo_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#000000">

                <SurfaceView
                        android:id="@+id/fragment_nicovideo_surfaceview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                <io.github.takusan23.tatimidroid.ReCommentCanvas
                        android:id="@+id/fragment_nicovideo_comment_canvas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
            </FrameLayout>

            <LinearLayout
                    android:id="@+id/fragment_nicovideo_video_title_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/fragment_nicovideo_comment_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="動画タイトル"
                        android:textSize="18sp" />

                <TextView
                        android:id="@+id/fragment_nicovideo_comment_videoid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="動画ID" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/fragment_nicovideo_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                <View
                        android:layout_width="100sp"
                        android:layout_height="10sp"
                        android:layout_margin="5sp"
                        android:background="@drawable/bottom_sheet_bar" />
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/fragment_nicovideo_tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="scrollable" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/fragment_nicovideo_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/fragment_nicovideo_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </androidx.viewpager2.widget.ViewPager2>

            <androidx.cardview.widget.CardView
                    android:id="@+id/fragment_nicovideo_controller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_margin="20sp"
                    android:visibility="gone"
                    tools:visibility="visible">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <io.github.takusan23.tatimidroid.NicoVideo.DanmakuView
                                    android:id="@+id/danmakuView"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp" />

                            <SeekBar
                                    android:id="@+id/fragment_nicovideo_seek"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/fragment_nicovideo_progress_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="00:00" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/fragment_nicovideo_controller_repeat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:padding="20dp"
                                app:srcCompat="@drawable/ic_repeat_black_24dp" />

                        <TextView
                                android:id="@+id/fragment_nicovideo_controller_replay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:drawableTop="@drawable/ic_undo_black_24dp"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:text="5"
                                android:textStyle="bold" />

                        <ImageView
                                android:id="@+id/fragment_nicovideo_play_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:padding="20dp"
                                app:srcCompat="@drawable/ic_play_arrow_24px" />

                        <TextView
                                android:id="@+id/fragment_nicovideo_controller_forward"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:drawableTop="@drawable/ic_redo_black_24dp"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:text="5"
                                android:textStyle="bold" />

                        <ImageView
                                android:id="@+id/fragment_nicovideo_controller_close"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:padding="20dp"
                                app:srcCompat="@drawable/ic_clear_black" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragment_nicovideo_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:backgroundTint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_videogame_asset_black_24dp" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>