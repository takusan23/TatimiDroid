<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--  影をつけるためだけにCardView追加  -->
    <androidx.cardview.widget.CardView
            android:id="@+id/fragment_nicovideo_framelayout_elevation_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">

        <FrameLayout
                android:id="@+id/fragment_nicovideo_framelayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center">

            <SurfaceView
                    android:id="@+id/fragment_nicovideo_surfaceview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            <io.github.takusan23.tatimidroid.ReCommentCanvas
                    android:id="@+id/fragment_nicovideo_comment_canvas"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            <include layout="@layout/inflate_nicovideo_player_controller" />

            <!-- コントローラーのレイアウトを読み込む -->

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:id="@+id/fragment_nicovideo_viewpager_linarlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/fragment_nicovideo_video_title_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="vertical"
                android:visibility="gone">

            <TextView
                    android:id="@+id/fragment_nicovideo_comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="動画タイトル"
                    android:textSize="18sp" />

            <TextView
                    android:id="@+id/fragment_nicovideo_comment_videoid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="動画ID" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/fragment_nicovideo_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <View
                    android:layout_width="100sp"
                    android:layout_height="10sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/bottom_sheet_bar" />
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/fragment_nicovideo_tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/fragment_nicovideo_swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/fragment_nicovideo_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></androidx.viewpager2.widget.ViewPager2>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>


</LinearLayout>