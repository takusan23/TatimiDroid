<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

    <TextView
            android:id="@+id/bottom_fragment_nicovideo_list_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="動画タイトル"
            android:textSize="18sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/bottom_fragment_nicovideo_list_menu_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="動画ID" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/bottom_fragment_nicovideo_list_menu_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableStart="@drawable/ic_content_paste_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10sp"
                android:text="@string/video_id_copy" />

        <TextView
                android:id="@+id/bottom_fragment_nicovideo_list_menu_mylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableStart="@drawable/ic_folder_open_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10sp"
                android:text="@string/add_mylist" />

        <TextView
                android:id="@+id/bottom_fragment_nicovideo_list_menu_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableStart="@drawable/ic_popup_icon_black"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10sp"
                android:text="@string/popup_video_player" />

        <TextView
                android:id="@+id/bottom_fragment_nicovideo_list_menu_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableStart="@drawable/ic_background_icon_black"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10sp"
                android:text="@string/background_video_player" />

        <TextView
                android:id="@+id/bottom_fragment_nicovideo_list_menu_get_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableStart="@drawable/ic_save_alt_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10sp"
                android:text="@string/get_cache" />

        <TextView
                android:id="@+id/bottom_fragment_nicovideo_list_menu_get_cache_economy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableStart="@drawable/ic_save_alt_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10sp"
                android:text="@string/get_cache_eco" />

        <LinearLayout
                android:id="@+id/bottom_fragment_nicovideo_list_menu_cache_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

            <TextView
                    android:id="@+id/bottom_fragment_nicovideo_list_menu_xml_to_json"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_outline_comment_24px"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10sp"
                    android:text="@string/xml_to_json"
                    android:visibility="gone" />

            <TextView
                    android:id="@+id/bottom_fragment_nicovideo_list_menu_re_get_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_refresh_black_24dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10sp"
                    android:text="@string/get_cache_re_get" />

            <TextView
                    android:id="@+id/bottom_fragment_nicovideo_list_menu_delete_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_outline_delete_24px"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10sp"
                    android:text="@string/delete_cache" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>