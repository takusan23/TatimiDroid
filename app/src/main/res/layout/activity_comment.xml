<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.CommentActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/activity_comment_main_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/live_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                <VideoView
                        android:id="@+id/live_video_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                <SurfaceView
                        android:id="@+id/live_surface_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                <io.github.takusan23.tatimidroid.CommentCanvas
                        android:id="@+id/comment_canvas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent" />
            </FrameLayout>


            <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/comment_activity_fragment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/activity_comment_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_outline_query_builder_24px" />

                        <TextView
                                android:id="@+id/activity_comment_comment_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="00:00"
                                android:textSize="18sp"
                                android:tooltipText="@string/livetime" />

                        <TextView
                                android:id="@+id/activity_comment_comment_end_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="00:00"
                                android:textSize="18sp"
                                android:tooltipText="@string/end_time_tooltip" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:visibility="visible">


                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_outline_account_circle_24px" />

                        <TextView
                                android:id="@+id/activity_comment_watch_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text=""
                                android:textSize="18sp"
                                android:tooltipText="@string/watch_count" />

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_active_icon" />

                        <TextView
                                android:id="@+id/activity_comment_comment_active_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="計算中"
                                android:textSize="18sp"
                                android:tooltipText="@string/active" />


                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_outline_comment_24px" />

                        <TextView
                                android:id="@+id/activity_comment_comment_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text=""
                                android:textSize="18sp"
                                android:tooltipText="@string/comment_count" />

                    </LinearLayout>

                    <com.google.android.material.tabs.TabLayout
                            android:id="@+id/activity_comment_tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabMode="scrollable">

                        <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/menu" />

                        <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/comment" />

                        <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/room_comment" />

                        <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gift" />

                        <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nicoads" />

                        <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/program_info" />

                    </com.google.android.material.tabs.TabLayout>

                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_outline_create_24px"
                        app:backgroundTint="@color/colorAccent"
                        tools:visibility="gone" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- コメント投稿部分だけ別のレイアウトを参照  -->
    <include layout="@layout/comment_card_layout"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>