<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Activity.CommentActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_comment_main_linearlayout">

        <FrameLayout
                android:id="@+id/live_framelayout"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            <VideoView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:id="@+id/live_video_view"/>

            <io.github.takusan23.tatimidroid.CommentCanvas
                    android:id="@+id/comment_canvas"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </FrameLayout>


        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activity_comment_linearlayout">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_outline_account_circle_24px"
                            />

                    <TextView
                            android:text=""
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:textSize="18sp"
                            android:layout_height="match_parent"
                            android:id="@+id/activity_comment_watch_count"
                            android:layout_weight="1"
                            />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_outline_comment_24px"
                            />

                    <TextView
                            android:text=""
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:textSize="18sp"
                            android:layout_height="match_parent"
                            android:id="@+id/activity_comment_comment_count"
                            android:layout_weight="1"
                            />

                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    app:backgroundTint="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_outline_create_24px"
                    android:layout_gravity="bottom|right"
                    android:id="@+id/fab"/>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/activity_comment_bottom_navigation_bar"
            app:menu="@menu/comment_view_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>