<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".NicoLive.Activity.CommentActivity">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <!-- 影をつけるためのCardView -->
        <androidx.cardview.widget.CardView
                android:id="@+id/comment_activity_fragment_layout_elevation_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardCornerRadius="0dp">

            <LinearLayout
                    android:id="@+id/activity_comment_main_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <FrameLayout
                        android:id="@+id/live_framelayout"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                    <VideoView
                            android:id="@+id/live_video_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                    <SurfaceView
                            android:id="@+id/live_surface_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                    <io.github.takusan23.tatimidroid.CommentCanvas
                            android:id="@+id/comment_canvas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent" />

                    <FrameLayout
                            android:id="@+id/comment_fragment_enquate_framelayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                    </FrameLayout>
                </FrameLayout>


                <LinearLayout
                        android:id="@+id/comment_activity_fragment_layout_motionlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/comment_fragment_program_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5sp"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/comment_fragment_program_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"
                                    android:textSize="18sp" />

                            <TextView
                                    android:id="@+id/comment_fragment_program_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"
                                    android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                    <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            app:srcCompat="@drawable/ic_outline_query_builder_24px" />

                                    <TextView
                                            android:id="@+id/activity_comment_comment_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:maxLines="1"
                                            android:text="00:00"
                                            android:textSize="18sp"
                                            android:tooltipText="@string/livetime" />

                                    <TextView
                                            android:id="@+id/activity_comment_comment_end_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:maxLines="1"
                                            android:text="00:00"
                                            android:textSize="18sp"
                                            android:tooltipText="@string/end_time_tooltip" />
                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                    <TextView
                                            android:id="@+id/activity_comment_watch_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:drawableStart="@drawable/ic_outline_account_circle_24px"
                                            android:gravity="center"
                                            android:maxLines="1"
                                            android:text=""
                                            android:textSize="18sp"
                                            android:tooltipText="@string/watch_count" />

                                    <TextView
                                            android:id="@+id/activity_comment_comment_active_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:drawableStart="@drawable/ic_active_icon"
                                            android:gravity="center"
                                            android:maxLines="1"
                                            android:text="計算中"
                                            android:textSize="18sp"
                                            android:tooltipText="@string/active" />

                                    <TextView
                                            android:id="@+id/activity_comment_comment_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:drawableStart="@drawable/ic_outline_comment_24px"
                                            android:gravity="center"
                                            android:maxLines="1"
                                            android:text=""
                                            android:textSize="18sp"
                                            android:tooltipText="@string/comment_count" />

                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                    android:id="@+id/activity_comment_comment_statistics"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:padding="10dp"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_timeline_black_24dp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/fragment_comment_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <View
                            android:layout_width="100sp"
                            android:layout_height="10sp"
                            android:layout_margin="5sp"
                            android:background="@drawable/bottom_sheet_bar" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

<!--
                    <ImageView
                            android:id="@+id/activity_comment_fullscreen_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            app:srcCompat="@drawable/ic_fullscreen_black_24dp" />
-->

                    <com.google.android.material.tabs.TabLayout
                            android:id="@+id/activity_comment_tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:tabMode="scrollable" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/comment_fragment_fab_coordinator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/comment_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </androidx.viewpager.widget.ViewPager>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_outline_create_24px"
                    app:backgroundTint="@color/colorAccent"
                    tools:visibility="visible" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>


    <!-- コメント投稿部分だけ別のレイアウトを参照  -->
    <include
            layout="@layout/comment_card_layout"
            tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>