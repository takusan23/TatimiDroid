<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2sp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/fragment_comment_fragment_menu_view_live_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_outline_live_tv_24px_black"
                                android:drawableTint="#ffffff"
                                android:text="@string/play_live_broadcast" />

                        <Button
                                android:id="@+id/fragment_comment_fragment_menu_background_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_background_icon_black"
                                android:drawableTint="#ffffff"
                                android:text="@string/background_play" />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/fragment_comment_fragment_menu_popup_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_popup_icon_black"
                                android:drawableTint="#ffffff"
                                android:text="@string/popup_player" />

                        <Button
                                android:id="@+id/fragment_comment_fragment_menu_floating_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_library_books_24px"
                                android:drawableTint="#ffffff"
                                android:maxLines="1"
                                android:text="@string/floating_comment_viewer" />


                    </LinearLayout>

                    <Switch
                            android:id="@+id/fragment_comment_fragment_menu_comment_hidden_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5sp"
                            android:text="@string/comment_hidden" />

                    <Switch
                            android:id="@+id/fragment_comment_fragment_menu_hide_info_perm_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5sp"
                            android:text="@string/hide_info_perm" />

                    <Switch
                            android:id="@+id/fragment_comment_fragment_menu_iyayo_comment_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:padding="5sp"
                            android:text="@string/iyayo_comment" />

                    <!--
                                        <Switch
                                                android:id="@+id/fragment_comment_fragment_menu_toast_switch"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:checked="true"
                                                android:padding="5sp"
                                                android:text="@string/comment_toast" />


                                        <Switch
                                                android:id="@+id/fragment_comment_fragment_menu_tts_switch"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:checked="true"
                                                android:padding="5sp"
                                                android:text="@string/tts" />

                    -->

                    <Switch
                            android:id="@+id/fragment_comment_fragment_menu_iyayo_hidden_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:padding="5sp"
                            android:text="@string/iyayo_hidden" />


                    <Button
                            android:id="@+id/fragment_comment_fragment_menu_quality_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quality" />

                    <Button
                            android:id="@+id/fragment_comment_fragment_menu_rotation_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/landscape_portrait" />

                    <Button
                            android:id="@+id/fragment_comment_fragment_menu_copy_liveid_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/copy_program_id" />

                    <Button
                            android:id="@+id/fragment_comment_fragment_menu_copy_communityid_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/copy_communityid" />


                    <Button
                            android:id="@+id/fragment_comment_fragment_menu_open_browser_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/open_browser" />

                    <Button
                            android:id="@+id/fragment_comment_fragment_menu_ng_list_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ng_list" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2sp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_share"
                            android:gravity="center_vertical"
                            android:text="@string/share" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2sp"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/fragment_comment_fragment_menu_share_image_attach_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:text="@string/share_attach_image" />

                        <Button
                                android:id="@+id/fragment_comment_fragment_menu_share_button"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:text="@string/share" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2sp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_share"
                            android:gravity="center_vertical"
                            android:text="@string/volume_control" />

                    <SeekBar
                            android:id="@+id/fragment_comment_fragment_volume_seek"
                            android:progress="10"
                            android:layout_margin="10sp"
                            android:max="10"
                            android:min="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="50sp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>