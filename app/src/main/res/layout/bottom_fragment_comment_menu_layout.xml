<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dp"
              android:id="@+id/bottom_fragment_comment_menu_parent_linearlayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="ID"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_fragment_comment_menu_user_id"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bottom_fragment_comment_menu_kotehan_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/kotehan"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:layout_gravity="center"
                android:text="@string/add_kotehan_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/bottom_fragment_comment_menu_kotehan_button"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/bottom_fragment_comment_menu_comment_ng_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/add_comment_ng" />

        <Button
                android:id="@+id/bottom_fragment_comment_menu_user_ng_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/add_user_ng" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/bottom_fragment_comment_menu_button_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/bottom_fragment_comment_menu_comment_copy"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/comment_copy" />

        <Button
                android:id="@+id/bottom_fragment_comment_menu_comment_url"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/open_url"
                android:visibility="gone" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_fragment_comment_menu_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

</LinearLayout>