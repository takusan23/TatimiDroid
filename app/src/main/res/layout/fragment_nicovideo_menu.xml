<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10sp">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:orientation="vertical">

                    <Button
                            android:id="@+id/fragment_nicovideo_menu_video_play"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/play_video" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/fragment_nicovideo_menu_popup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/popup_player"
                                app:icon="@drawable/ic_popup_icon" />

                        <Button
                                android:id="@+id/fragment_nicovideo_menu_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/background_play"
                                app:icon="@drawable/ic_background_icon" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <Switch
                            android:id="@+id/fragment_nicovideo_menu_3ds_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:text="@string/menu_device_3ds_block" />

                    <Switch
                            android:id="@+id/fragment_nicovideo_menu_scroll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:text="@string/menu_scroll_comment" />

                    <Switch
                            android:id="@+id/fragment_nicovideo_menu_hide_comment_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:text="@string/hide_comment_search_area" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10sp">

                    <Button
                            android:id="@+id/fragment_nicovideo_menu_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/video_id_copy" />

                    <Button
                            android:id="@+id/fragment_nicovideo_menu_add_mylist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_mylist" />

                    <Button
                            android:id="@+id/fragment_nicovideo_menu_quality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quality" />

                    <Button
                            android:id="@+id/fragment_nicovideo_menu_rotation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/landscape_portrait" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10sp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_folder_open_black_24dp"
                            android:text="@string/cache" />

                    <Button
                            android:id="@+id/fragment_nicovideo_menu_get_cache"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/get_cache" />

                    <Button
                            android:id="@+id/fragment_nicovideo_menu_re_get_cache"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/get_cache_re_get"
                            android:visibility="gone"
                            tools:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10sp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_share"
                            android:text="@string/share" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/fragment_nicovideo_menu_share_media_attach"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:text="@string/share_attach_image" />

                        <Button
                                android:id="@+id/fragment_nicovideo_menu_share"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:text="@string/share" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10sp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_volume_up_24px"
                            android:text="@string/volume" />

                    <SeekBar
                            android:id="@+id/fragment_nicovideo_menu_volume_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            android:max="10"
                            android:min="0"
                            android:progress="10" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>