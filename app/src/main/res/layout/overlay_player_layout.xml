<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <SurfaceView
                android:id="@+id/overlay_surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <io.github.takusan23.tatimidroid.CommentCanvas
                android:id="@+id/overlay_commentCanvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:id="@+id/overlay_button_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                <ImageButton
                        android:id="@+id/overlay_sound_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        android:tint="#ffffff"
                        app:srcCompat="@drawable/ic_volume_up_24px" />

                <ImageButton
                        android:id="@+id/overlay_activity_launch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        android:tint="#ffffff"
                        app:srcCompat="@drawable/ic_outline_open_in_browser_24px" />

                <ImageButton
                        android:id="@+id/overlay_close_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        android:tint="#ffffff"
                        app:srcCompat="@drawable/ic_clear_black" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:tint="#ffffff"
                        app:srcCompat="@drawable/ic_aspect_ratio_24px" />

                <SeekBar
                        android:id="@+id/overlay_size_seekbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:max="20"
                        android:padding="5sp"
                        android:progress="0" />
            </LinearLayout>

            <TextView
                    android:id="@+id/overlay_comment_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>