<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <SurfaceView
                android:id="@+id/overlay_surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <io.github.takusan23.tatimidroid.CommentCanvas
                android:id="@+id/overlay_commentCanvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:id="@+id/overlay_button_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:orientation="vertical"
                android:visibility="gone">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                <ImageButton
                        android:id="@+id/overlay_close_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10sp"
                        android:tint="#ffffff"
                        app:srcCompat="@drawable/ic_do_not_disturb_alt_black_24dp" />

                <ImageButton
                        android:id="@+id/overlay_activity_launch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10sp"
                        android:tint="#ffffff"
                        app:srcCompat="@drawable/ic_outline_open_in_browser_24px" />
            </LinearLayout>

            <TextView
                    android:id="@+id/overlay_comment_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>