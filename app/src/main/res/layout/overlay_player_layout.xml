<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="true">

        <SurfaceView
                android:id="@+id/overlay_surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <io.github.takusan23.tatimidroid.CommentCanvas
                android:id="@+id/overlay_commentCanvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:id="@+id/overlay_button_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="#80000000"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/overlay_size_change_message_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        android:src="@drawable/ic_aspect_ratio_24px"
                        android:tint="#ffffff" />

                <ImageView
                        android:id="@+id/overlay_send_comment_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        android:src="@drawable/ic_send_black"
                        android:tint="#ffffff" />

                <ImageView
                        android:id="@+id/overlay_sound_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        android:src="@drawable/ic_volume_up_24px"
                        android:tint="#ffffff" />

                <ImageView
                        android:id="@+id/overlay_activity_launch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        android:src="@drawable/ic_outline_open_in_browser_24px"
                        android:tint="#ffffff" />

                <ImageView
                        android:id="@+id/overlay_close_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        android:src="@drawable/ic_clear_black"
                        android:tint="#ffffff" />
            </LinearLayout>

            <TextView
                    android:id="@+id/overlay_comment_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:visibility="gone" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>