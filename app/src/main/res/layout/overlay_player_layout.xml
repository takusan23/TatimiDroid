<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <VideoView
                android:id="@+id/overlay_videoview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <io.github.takusan23.tatimidroid.CommentCanvas
                android:id="@+id/overlay_commentCanvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:id="@+id/overlay_button_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:orientation="vertical"
                android:visibility="gone">

            <ImageButton
                    android:id="@+id/overlay_close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:padding="10sp"
                    android:tint="#ffffff"
                    app:srcCompat="@drawable/ic_do_not_disturb_alt_black_24dp" />

            <TextView
                    android:id="@+id/overlay_comment_textview"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>