<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_outline_live_tv_24px_black"
            android:key="setting_watch_live"
            android:summary="@string/setting_watch_view_description"
            android:title="@string/setting_watch_view_title" />

    <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_outline_pan_tool_24px"
            android:key="setting_hidden_oidashi_comment"
            android:summary="@string/setting_oidashi_comment_description"
            android:title="@string/setting_oidashi_comment_title" />


    <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_outline_format_color_fill_24px"
            android:key="setting_room_color"
            android:summary="@string/room_color_description"
            android:title="@string/room_color_title" />

    <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_new_comment_icon"
            android:key="setting_new_comment"
            android:summary="@string/setting_new_comment_area_description"
            android:title="@string/setting_new_comment_area_title" />

    <Preference
            android:icon="@drawable/ic_outline_stop_24px"
            android:key="auto_admission_stop_preference"
            android:title="@string/auto_admission_stop" />


    <Preference
            android:icon="@drawable/ic_outline_block_24px"
            android:key="ng_list_activity"
            android:title="@string/ng_list">
        <!--Activity起動-->
        <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="io.github.takusan23.tatimidroid.Activity.NGListActivity"
                android:targetPackage="io.github.takusan23.tatimidroid" />
    </Preference>


    <Preference
            android:icon="@drawable/ic_outline_comment_24px"
            android:key="comment_list_activity"
            android:title="@string/comment_post_list">
        <!--Activity起動-->
        <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="io.github.takusan23.tatimidroid.Activity.CommentPOSTList"
                android:targetPackage="io.github.takusan23.tatimidroid" />
    </Preference>


    <PreferenceCategory android:title="@string/leave_app">


        <SwitchPreference
                android:defaultValue="false"
                android:icon="@drawable/ic_background_icon_black"
                android:key="setting_leave_background"
                android:summary="@string/leave_background_description"
                android:title="@string/background_play" />

        <SwitchPreference
                android:defaultValue="false"
                android:icon="@drawable/ic_popup_icon_black"
                android:key="setting_leave_popup"
                android:summary="@string/leave_popup_description"
                android:title="@string/popup_player" />


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/sonta">

        <Preference
                android:icon="@drawable/ic_outline_info_24px"
                android:key="licence_preference"
                android:title="@string/licence" />

        <Preference
                android:icon="@drawable/ic_outline_android_24px"
                android:key="konoapp_preference"
                android:title="@string/kono_app" />

    </PreferenceCategory>


    <!--
        <SwitchPreference
                android:title="@string/watching_mode_title"
                android:key="setting_watching_mode"
                android:summary="@string/watching_mode_description"
                android:defaultValue="false"
                />
    -->


</PreferenceScreen>