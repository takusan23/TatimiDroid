<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 通常時のConstraintLayout -->
    <ConstraintSet android:id="@+id/fragment_nicovideo_transition_start">
        <!-- 初期状態なので -->
    </ConstraintSet>

    <!-- ミニプレイヤー時のConstraintLayout -->
    <ConstraintSet android:id="@+id/fragment_nicovideo_transition_end">
        <Constraint
                android:id="@+id/fragment_nicovideo_background"
                android:layout_width="360dp"
                android:layout_height="180dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
                android:id="@+id/fragment_nicovideo_viewpager_parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_nicovideo_background"
                app:layout_constraintEnd_toEndOf="@+id/fragment_nicovideo_background"
                app:layout_constraintTop_toTopOf="@+id/fragment_nicovideo_background" />
        <Constraint
                android:id="@+id/fragment_nicovideo_surfaceview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_nicovideo_background"
                app:layout_constraintEnd_toEndOf="@+id/fragment_nicovideo_background"
                app:layout_constraintStart_toStartOf="@+id/fragment_nicovideo_background"
                app:layout_constraintTop_toTopOf="@+id/fragment_nicovideo_background" />
    </ConstraintSet>

    <!-- フルスクリーン時のConstraintLayout -->
    <ConstraintSet android:id="@+id/fragment_nicovideo_transition_fullscreen">
        <Constraint
                android:id="@+id/fragment_nicovideo_viewpager_parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fragment_nicovideo_background"
                app:layout_constraintTop_toTopOf="@+id/fragment_nicovideo_background" />
        <Constraint
                android:id="@+id/fragment_nicovideo_surfaceview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_nicovideo_background"
                app:layout_constraintEnd_toEndOf="@+id/fragment_nicovideo_background"
                app:layout_constraintStart_toStartOf="@+id/fragment_nicovideo_background"
                app:layout_constraintTop_toTopOf="@+id/fragment_nicovideo_background" />
        <Constraint
                android:id="@+id/fragment_nicovideo_comment_canvas"
                app:layout_constraintEnd_toEndOf="@+id/fragment_nicovideo_surfaceview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_nicovideo_surfaceview"
                app:layout_constraintTop_toTopOf="@+id/fragment_nicovideo_surfaceview"
                app:layout_constraintStart_toStartOf="@+id/fragment_nicovideo_surfaceview" />
    </ConstraintSet>

    <!-- 終了モーション -->
    <ConstraintSet android:id="@+id/fragment_nicovideo_transition_finish">
        <Constraint
                android:id="@+id/fragment_nicovideo_background"
                android:layout_width="360dp"
                android:layout_height="180dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed" />
        <Constraint
                android:id="@+id/fragment_nicovideo_viewpager_parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_nicovideo_background"
                app:layout_constraintEnd_toEndOf="@+id/fragment_nicovideo_background"
                app:layout_constraintTop_toTopOf="@+id/fragment_nicovideo_background" />
        <Constraint
                android:id="@+id/fragment_nicovideo_surfaceview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_nicovideo_background"
                app:layout_constraintEnd_toEndOf="@+id/fragment_nicovideo_background"
                app:layout_constraintStart_toStartOf="@+id/fragment_nicovideo_background"
                app:layout_constraintTop_toTopOf="@+id/fragment_nicovideo_background" />
    </ConstraintSet>

    <!-- ミニプレイヤーへの遷移 -->
    <Transition
            app:constraintSetEnd="@id/fragment_nicovideo_transition_end"
            app:constraintSetStart="@+id/fragment_nicovideo_transition_start">
        <OnSwipe
                app:dragDirection="dragDown"
                app:touchAnchorId="@+id/include2"
                app:touchRegionId="@+id/include2" />
    </Transition>

    <!-- 左へスワイプしたときの遷移 -->
    <Transition
            app:constraintSetEnd="@+id/fragment_nicovideo_transition_finish"
            app:constraintSetStart="@+id/fragment_nicovideo_transition_end">
        <OnSwipe
                app:dragDirection="dragLeft"
                app:touchAnchorId="@+id/include2"
                app:touchRegionId="@+id/include2" />
    </Transition>

</MotionScene>
